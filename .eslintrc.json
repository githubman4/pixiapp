{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off", // キャメルケースをオフ
        "semi": "error", // セミコロン無しはエラーとする。
        "no-console": "warn", // コンソールは警告とする。
        // 以下のルール２項目はinterfaceをインポートしたときの警告を無くす
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    }
}